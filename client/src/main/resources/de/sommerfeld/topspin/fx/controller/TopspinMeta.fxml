<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            stylesheets="/de/sommerfeld/topspin/fx/css/style.css"
            prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="de.sommerfeld.topspin.fx.controller.TopspinMetaController">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="top-search-bar" prefHeight="40.0">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox fx:id="searchComponentPlaceholder" alignment="CENTER"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>


    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer-bar" spacing="10">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>

            <Label text="Sommerfeld" styleClass="footer-label"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="createNewPlanButton" text="+ New Plan" styleClass="footer-button-green"
                    mnemonicParsing="false"/>
            <Button fx:id="showAllPlansButton" text="Show all Plans" styleClass="footer-button-gray"
                    mnemonicParsing="false"/>
        </HBox>
    </bottom>
</BorderPane>
